<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/home.css">
</head>
<body>
    <h1>Please Login!</h1>
    <% if(errors.length>0) { %>
    <div>
        <ul>
            <% errors.forEach(errMsg => { %>
                <li><%= errMsg %></li>
            <% })%>
        </ul>
    </div>
    <% } %>
    <form action="/login" method="post">
        <label for="username">Username</label>
        <input class="input-block" type="text" id="username" name="email" value="<%= oldInput.email%>" placeholder="Email/Username">
        <label for="password">Password</label>
        <input class="input-block" type="password" id="password" name="password" placeholder="Enter your Password">
        
        <br>
        <button>Sign-In</button>
    </form>
</body>
</html>