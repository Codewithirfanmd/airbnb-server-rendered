<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link rel="stylesheet" href="/home.css">
</head>
<body>
    <h1>Register as a new User</h1>
    <% if(errors && errors.length>0) { %>
    <div>
        <ul>
            <% errors.forEach(errMsg => { %>
                <li><%= errMsg %></li>
            <% })%>
        </ul>
    </div>
    <% } %>

    <form action="/signup" method="post">
        <label for="firstname">FirstName</label>
        <input class="input-block" type="text" id="firstname" name="firstname" value="<%= oldInput.firstname%>" placeholder="First Name">
        <label for="lastname">LastName</label>
        <input class="input-block" type="text" id="lastname" name="lastname"value="<%= oldInput.lastname %>" placeholder="Last Name">
        <label for="email">Email</label>
        <input class="input-block" type="text" id="email" name="email" value="<%=oldInput.email%>" placeholder="test@example.com">
        <label for="password">Password</label>
        <input class="input-block" type="password" id="password" name="password" placeholder="Enter your Password">
        <label for="confirmPassword">Confirm Password</label>
        <input class="input-block" type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
        <label>User Type</label>
        <input type="radio" id="guest" name="userType" value="guest" >
        <label for="guest">Guest</label>
        <input type="radio" id="host" name="userType" value="host" >
        <label for="host">Host</label>
        <br>
        <input type="checkbox" id="term" name="terms">
        <label for="term">I agree to the terms and conditions</label>


        
        <br>
        <button>Sign-In</button>
    </form>
</body>
</html>